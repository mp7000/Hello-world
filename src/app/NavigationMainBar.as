package app{	import app.ButtonAnimation;	import app.MenuButtonMain;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;
	public class NavigationMainBar extends MovieClip{				private var _navData:Array;		private var posX:int;		private var container:Sprite;				public function NavigationMainBar(navData:Array)		{			_navData = navData;						if (stage) build();			else addEventListener(Event.ADDED_TO_STAGE, build);								}				private function build(e:Event=null):void {			stage.addEventListener(Event.RESIZE, handleStageResize);						container = new Sprite();			container.graphics.beginFill(0xffffff,0);			container.graphics.drawRect(0,0,200,30);			container.graphics.endFill();						container.x=stage.stageWidth-200;			container.y=0;						addChild(container);							posX = container.width;						for (var i:int=0; i < _navData.length; i++) {				var menuBtn:MenuButtonMain = new MenuButtonMain();				menuBtn.tf.text=(_navData[i]);								if (_navData[i] == "Work"){										var _test:MovieClip=new ButtonAnimation();					_test.name="animation";					menuBtn.addChild(_test);									}				else if (_navData[i] == "About"){										var _test2:MovieClip=new ButtonAnimation();					_test2.name="animation";					menuBtn.addChild(_test2);									}								menuBtn.x = posX-38;				menuBtn.y = 23;				container.addChild(menuBtn);								//opdater posX					posX -= menuBtn.width - 5;			}					}		private function handleStageResize(e:Event):void {			//posX = stage.stageWidth;			//.x=posX;			container.x=stage.stageWidth-200;					}			}//class}//package