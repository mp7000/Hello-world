package app{	import flash.display.MovieClip;	import flash.events.Event;	import app.MenuButtonMain;	import flash.events.MouseEvent;	public class NavigationBar extends MovieClip{				private var _navData:Array;		private var posX:int;				public function NavigationBar(navData:Array)		{			_navData = navData;						if (stage) build();			else addEventListener(Event.ADDED_TO_STAGE, build);											}				private function build(e:Event=null):void {							posX = stage.stageWidth;			for (var i:int=0; i < _navData.length; i++) {				var menuBtn:MenuButtonMain = new MenuButtonMain();				menuBtn.tf.text=(_navData[i]);				menuBtn.x = posX-38;				menuBtn.y = 23;				addChild(menuBtn);									//opdater posX					posX -= menuBtn.width + 2;			}					}			}//class}//package